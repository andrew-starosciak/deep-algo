[Unit]
Description=OpenClaw Dashboard API
After=network.target postgresql.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/python
EnvironmentFile=/home/ubuntu/.env
ExecStart=/home/ubuntu/venv/bin/uvicorn dashboard.app:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=5
StandardOutput=append:/home/ubuntu/logs/dashboard-api.log
StandardError=append:/home/ubuntu/logs/dashboard-api.log

[Install]
WantedBy=multi-user.target
